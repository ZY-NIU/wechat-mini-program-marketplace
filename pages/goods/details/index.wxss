@import '../../../style/global.wxss';
page {
  width: 100vw;
}

.goods-detail-page {
  --td-swiper-radius: 0;
  background-color: #fff;
  padding-bottom: 120rpx;
}

.goods-detail-page .goods-info {
  margin: 0 auto;
  padding: 0 42rpx 16rpx 42rpx;
  background-color: #fff;
}

/* images */
.goods-detail-page .swipe-img {
  width: 100%;
  height: 750rpx;
}

/* title */
.goods-detail-page .goods-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 36rpx 0 36rpx;
}

.goods-detail-page .goods-title .goods-name {
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 35rpx;
  word-break: break-all;
  color: #333333;
}

/* price */
.goods-detail-page .goods-info .goods-price {
  white-space: nowrap;
  display: flex;
  align-items: baseline;
  padding: 16rpx 0rpx;
}

.goods-detail-page .goods-info .goods-price .spec-for-price {
  font-size: 32rpx;
  white-space: nowrap;
  margin: 0;
}

.goods-detail-page .goods-info .goods-price .spec-for-symbol {
  font-size: 31rpx;
}

.goods-detail-page .goods-info .goods-price .goods-card__origin-price {
  white-space: nowrap;
  color: #bbbbbb;
  font-size: 32rpx;
  margin: 0 0 0 16rpx;
}

/* description */
.goods-detail-page .goods-info .goods-intro {
  font-size: 28rpx;
  color: #888;
  line-height: 36rpx;
  padding-top: 6rpx;
  padding-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  white-space: normal;
}

/* conditions */
.attribute-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.attribute-name {
  text-align: left;
  width: 250rpx;
}

.attribute-value {
  color: #888;
  text-align: left;
  flex-grow: 1;
}

/* seller information */
.seller-wrap {
  padding-top: 15rpx;
  padding-left: 45rpx;
  padding-right: 62rpx;
  background-color: #fff;
}

.seller-wrap .seller-title {
  font-size: 28rpx;
  font-weight: 500;
}

.seller-wrap .seller-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 22rpx;
  /* background-color: #F0F0F0; */
  border-radius: 20rpx;
  /* padding: 0 30rpx 0 20rpx; */
}

.seller-wrap .seller-bar .seller-follow {
  font-size: 24rpx;
  background-color: #F0F0F0;
  text-align: center;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}

.seller-wrap .seller-bar .chat {
  padding-right: 15rpx;
}

.seller-wrap .seller-head {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.seller-wrap .seller-head .seller-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 64rpx;
}

.seller-wrap .seller-head .seller-head-right {
  margin-left: 24rpx;
}

.seller-head-right .seller-username {
  font-size: 29rpx;
  color: #333333;
  line-height: 36rpx;
  font-weight: 400;
}

/* location */
.seller-wrap .location-title {
  font-size: 28rpx;
  font-weight: 500;
  padding-top: 32rpx;
}

.seller-wrap .location-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 25rpx;
  padding: 10rpx 10rpx;
  margin-right: 20rpx;
}

.seller-wrap .location-preference {
  display: flex;
  align-items: center;
  padding-top: 14rpx;
}

.seller-wrap .location-preference .text {
  padding-left: 16rpx;
}

/* map */
.show-map-container {
  background: #FFF;
  border-radius: 54rpx;
}
.map {
  width: 100%;
  height: 150rpx;
  background: #FFF;
  padding-top: 20rpx;
}

/* bottom bar */
.goods-bottom-operation {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding-bottom: env(safe-area-inset-bottom);
}

.t-toast__content {
  z-index: 12000 !important;
}
