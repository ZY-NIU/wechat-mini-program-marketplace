page {
  background-color: #fff;
}

.create-item {
  padding-top: 15rpx;
  padding-bottom: 40rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.form-content .input-wrap {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.form-content .image-container {
  white-space: nowrap;
  height: 200rpx;
  margin-top: 6rpx;
}

.form-content .image-container .image {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  display: inline-block;
  border-radius: 18rpx;
  margin-right: 10rpx;
}

.delete-image {
  position: absolute;
  top: 0;
  right: 0;
}

.image-add-sign {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.form-content .image-add {
  width: 195rpx;
  height: 195rpx;
  display: inline-block;
  vertical-align: top;
  position: relative;
  border-radius: 18rpx;
  background-color: #F0F0F0;
}

.form-content .outer-title {
  font-size: 24rpx;
  padding-left: 16rpx;
  padding-bottom: 4rpx;
  color: #666;
}

.form-content .placeholder {
  font-size: 32rpx;
  color: #BFBFBF;
}

.form-content .content-input {
  display: flex;
  align-items: center;
  border-radius: 18rpx;
  background-color: #F0F0F0;
  color: #666;
  padding-left: 30rpx;
  padding-right: 28rpx;
}

.form-content .content-input .input {
  flex: 1;
  font-size: 30rpx;
  padding-top: 21rpx;
  padding-bottom: 23rpx;
}

.form-content .price {
  display: flex;
}

.form-content .price-sign-input {
  font-size: 30rpx;
  width: 82rpx;
  border-radius: 18rpx;
  background-color: #F0F0F0;
  color: #666;
  padding-left: 22rpx;
  padding-right: 22rpx;
  padding-top: 21rpx;
  padding-bottom: 23rpx;
}

.form-content .price-content-input {
  flex: 1;
  display: flex;
  align-items: center;
  border-radius: 18rpx;
  background-color: #F0F0F0;
  color: #666;
  padding-left: 30rpx;
  padding-right: 28rpx;
  margin-left: 10rpx;
}

.form-content .content-select {
  display: flex;
  align-items: center;
  color: #666;
  padding-left: 8rpx;
}

.form-content .content-select .wrap {
  display: flex;
  align-items: center;
  padding-top: 15rpx;
  padding-bottom: 5rpx;
}

.form-content .content-select .wrap text {
  flex: 1;
  font-size: 30rpx;
  padding-left: 10rpx;
}

.submit {
  flex-grow: 1;
  display: flex;
  align-items: center;
  align-self: stretch;
  border-radius: 18rpx;
  border: 1px solid #666;
  background-color: #fff;
  color: #666;
  justify-content: center;
  margin-top: 30rpx;
}

.submit .text{
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
}
