.users-list-wrap {
  padding: 20rpx 0;
  background: #fff;
}

.no-following {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  background-color: #fff;
  padding-top: 200rpx;
}

.user-list {
  align-items: center;
  padding: 25rpx 45rpx;
}

.left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-list .user-head {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-list .user-head .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.flex-row {
  display: flex;
  flex: 1;
}

.user-details {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
  margin-right: 15rpx;
}

.user-name {
  font-size: 32rpx;
  /* margin-bottom: 5rpx; */
  white-space: normal; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.seller-follow {
  font-size: 24rpx;
  background-color: #F0F0F0;
  text-align: center;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}
