page {
  background-color: #fff;
  width: 100%;
}

.stat-wrapper {
  display: flex; 
  justify-content: flex-start; 
  align-items: center;
  /* margin-top: 230rpx; */
  padding: 0 20rpx;
  width: 100%;
}

.stat-wrapper .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-left: 15rpx;
  font-size: 22rpx;
}

.stat-wrapper .stat-item .stat {
  font-size: 32rpx;
}

.content-wrapper {
  position: relative;
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.content-wrapper .item {
  display: flex;
  align-items: center;
  background-color: #F0F0F0;
  border-radius: 20rpx;
  padding: 0 28rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.content-wrapper .item .title {
  font-size: 28rpx;
  margin-left: 10rpx;
  padding: 25rpx 0;
}

.content-wrapper .button-item {
  display: flex;
  align-items: center;
  background-color: #F0F0F0;
  border-radius: 20rpx;
  padding: 0 28rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.content-wrapper .button-item:after {
  border: none;
}

.content-wrapper .button-item .title {
  font-size: 28rpx;
  margin-left: 10rpx;
  padding: 9rpx 0;
}

.divider-line {
  width: 100%;
  height: 5rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.footer__version {
  text-align: center;
  margin-top: 120rpx;
  color: #BFBFBF;
  margin-bottom: 4rpx;
  font-size: 24rpx;
  line-height: 32rpx;
}