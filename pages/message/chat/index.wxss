.chat_content {
  margin-bottom: 120rpx;
  width: 100%;
  height: 100vh;
}

.other-wrapper {
  display: flex;
  margin: 20rpx 20rpx 0 20rpx;
  padding-bottom: 10rpx;
  align-items: flex-start;
}

.other-wrapper .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 10rpx;
}

.other-wrapper .msg {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.other-wrapper .msg .text-time {
  font-size: 14rpx;
  color: #666;
}

.other-wrapper .msg .text {
  /* font-size: 32rpx; */
  margin-right: 70rpx;
}

.my-wrapper {
  display: flex;
  margin: 20rpx 20rpx 0rpx 20rpx;
  padding-bottom: 10rpx;
  justify-content: flex-end;
}

.my-wrapper .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  /* right: 10rpx; */
  flex-shrink: 0;
  margin-top: 10rpx;
}

.my-wrapper .msg {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.my-wrapper .msg .text-time {
  font-size: 14rpx;
  color: #666;
  /* align-items: flex-end; */
}

.my-wrapper .msg .text {
  margin-left: 70rpx;
}

text {
  font-size: 26rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}

.test {
  height: 150rpx;
  background-color: #fff;
}

/* input area */
.pub-comment {
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
}

.pub-left {
  background-color: #fff;
  flex: 1;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.pub-input {
  flex: 1;
  padding: 10rpx 20rpx;
}

.pub-special {
  margin-right: 20rpx;
  margin-left: 25rpx;
}
