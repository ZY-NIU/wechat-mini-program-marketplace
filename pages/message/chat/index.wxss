.chat_content {
  margin-bottom: 120rpx;
  width: 100%;
  /* height: 100vh; */
}

.other-wrapper {
  display: flex;
  margin: 20rpx 20rpx 0 20rpx;
  padding-bottom: 10rpx;
  align-items: flex-start;
}

.other-wrapper .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 10rpx;
}

.other-wrapper .msg {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.other-wrapper .msg .text-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.other-wrapper .msg .text {
  /* font-size: 32rpx; */
  margin-right: 70rpx;
}

.other-wrapper-content-only {
  display: flex;
  margin: 0 20rpx 0rpx 20rpx;
  padding-bottom: 12rpx;
  justify-content: flex-end;
  margin-right: 120rpx;
}

.other-wrapper-content-only .text {
  margin-left: 70rpx;
}

.my-wrapper {
  display: flex;
  margin: 20rpx 20rpx 0rpx 20rpx;
  padding-bottom: 10rpx;
  justify-content: flex-end;
}

.my-wrapper .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  /* right: 10rpx; */
  flex-shrink: 0;
  margin-top: 10rpx;
}

.my-wrapper .msg {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.my-wrapper .msg .text-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  /* align-items: flex-end; */
}

.my-wrapper .msg .text {
  margin-left: 70rpx;
}

.my-wrapper-content-only {
  display: flex;
  margin: 0 20rpx 0rpx 20rpx;
  padding-bottom: 12rpx;
  justify-content: flex-end;
  margin-right: 120rpx;
}

.my-wrapper-content-only .text {
  margin-left: 70rpx;
}

.image {
  width: 400rpx;
  height: 400rpx;
  position: relative;
  display: inline-block;
  border-radius: 18rpx;
  margin-right: 10rpx;
}

.text {
  font-size: 30rpx;
  font-weight: 300;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}

.test {
  height: 150rpx;
  background-color: #fff;
}

/* input area */
.pub-comment {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  /* justify-content: space-between; */
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 108rpx;
  background-color: #F0F0F0;
  /* padding-top: 20rpx; */
  padding-bottom: 50rpx;
}

.pub-left {
  background-color: #fff;
  flex: 1;
  border-radius: 50rpx;
  /* display: flex; */
  align-items: center;
  margin-left: 30rpx;
}

.pub-input {
  display: block;
  box-sizing: border-box;
  /* width: 544rpx; */
  height: 72rpx;
  /* flex: 1; */
  padding: 10rpx 20rpx;
  overflow: visible;
}

.pub-special {
  margin-right: 23rpx;
  margin-left: 25rpx;
}
