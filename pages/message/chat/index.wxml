<scroll-view scroll-y="true" scroll-into-view="toView" class='chat_content'>
  <view wx:for="{{chatList}}">

    <block wx:if="{{item.id==otherInfo.id}}">
      <view class="other-wrapper">
        <image class="avatar" src="{{otherInfo.avatar}}"></image>
        <view class="msg">
          <view class="text-time">
            <text >{{item.time}}</text>
          </view>
          <view class="text">
            <text >{{item.text}}</text>
          </view>
        </view>
      </view>
    </block>

    <block wx:if="{{item.id==myInfo.id}}">
      <view class="my-wrapper">
        <view class="msg">
          <view class="text-time">
            <text >{{item.time}}</text>
          </view>
          <view class="text">
            <text >{{item.text}}</text>
          </view>
        </view>
        <image class="avatar" src="{{myInfo.avatar}}"></image>
      </view>
    </block>

  </view>
  <view id="toView" class="test"></view>
</scroll-view>

<view class="pub-comment">
  <view class = "pub-left">
    <input class="pub-input" bindinput="handleInput" value="{{inputValue}}"></input>
  </view>
  <view class="pub-special">
    <t-icon prefix="wr" name="add_circle" size="58rpx" color="#666" ></t-icon>
  </view>
</view>