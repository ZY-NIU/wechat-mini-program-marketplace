page {
  padding: 20rpx 0;
}

.no-message {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  background-color: #fff;
  padding-top: 200rpx;
}

.user-list {
  align-items: center;
  padding: 28rpx 32rpx;
}

.left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-list .user-head {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-list .user-head .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.flex-row {
  display: flex;
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.user-name {
  font-size: 28rpx;
  /* margin-bottom: 5rpx; */
  white-space: normal; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.msg {
  font-size: 20rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 5rpx;
}

.time {
  font-size: 20rpx;
  color: #666;
}
