.top-wrap {
  padding: 15rpx 32rpx;
  background-color: #fff;
}

.top-wrap .top-bar {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

/* create trade */
.top-wrap .top-bar .create-trade {
  flex-grow: 1;
  display: flex;
  align-items: center;
  align-self: stretch;
  color: #666;
  border-radius: 18rpx;
  border: 1px solid black;
  justify-content: center;
  height: 70rpx;
}

.top-wrap .top-bar .create-trade .text {
  font-size: 30rpx;
  text-align: center;
  padding-left: 9rpx;
}

.top-wrap .top-bar .share {
  padding: 0 10rpx;
  margin-right: 10rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* goods list */
.list-container {
  display: block;
  background: #fff;
  padding: 10rpx 24rpx 50rpx 24rpx;
}

.list-container .goods-list-container {
  background: #fff !important;
  margin-top: 10rpx;
}

/* popup container */
.popup-container {
  background-color: #ffffff;
  display: flex;
  flex-wrap: wrap;
  border-radius: 16rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}

.popup-container .item {
  flex-basis: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 28rpx;
}

.popup-container .item .text {
  margin-left: 24rpx;
}
