.goods-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-card__main {
  display: flex;
  align-items: flex-start;
  /* height: 120rpx; */
  margin: 15rpx 0;
}

.goods-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.goods-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.goods-card__body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 18rpx;
}

.goods-card__title {
  font-size: 28rpx;
  color: #333;
  white-space: normal;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.spec-for-price {
  font-size: 28rpx;
  white-space: nowrap;
}

.spec-for-symbol {
  font-size: 27rpx;
}

.goods-price {
  white-space: nowrap;
}

.goods-card__origin-price {
  white-space: nowrap;
  color: #bbbbbb;
  font-size: 28rpx;
  margin-left: 8rpx;
}

.goods-dot {
  padding: 0 5rpx;
  font-size: 30rpx;
}

.goods-card__like-container {
  margin: 10rpx 20rpx;
}
