<view
  id="{{id}}"
  class="goods-card"
  data-goods="{{ goods }}"
>
	<view class="goods-card__main" bind:tap="clickHandle">
		<view class="goods-card__thumb" >
			<image
			  wx:if="{{ !!goods.priImg }}"
			  class="goods-card__img"
			  src="{{ goods.priImg }}"
			  mode="aspectFill"
			  lazy-load
			/>
		</view>

		<view class="goods-card__body">
      <view wx:if="{{ goods.title }}" class="goods-card__title">
        {{ goods.title }}
      </view>
      <view class="goods-price">
        <price
          wx:if="{{ goods.price }}"
          wr-class="spec-for-price"
          symbol-class="spec-for-symbol"
          symbol="{{currency}}"
          price="{{goods.price}}"
        />
        <price
          wx:if="{{ goods.originPrice && lowerPrice }}"
          wr-class="goods-card__origin-price"
          symbol-class="spec-for-symbol"
          symbol="{{currency}}"
          price="{{goods.originPrice}}"
          type="delthrough"
        />
      </view>
    </view>
    <!-- <view wx:if="{{ goods.title }}" class="goods-dot">
      Â· 
    </view> -->
	</view>

  <view class="goods-card__like-container" >
    <t-icon
      class="goods-card__like"
      prefix="wr"
      name="{{icon}}"
      id="{{id}}-like"
      data-id="{{id}}"
      catchtap="editHandle"
      size="52rpx"
      color="#333"
    />
  </view>
</view>

