<view
  id="{{independentID}}"
  class="goods-card"
  bind:tap="clickHandle"
  data-goods="{{ goods }}"
>
	<view class="goods-card__main">
		<view class="goods-card__thumb" bind:tap="clickThumbHandle">
			<t-image
			  wx:if="{{ !!goods.priImg }}"
			  t-class="goods-card__img"
			  src="{{ goods.priImg }}"
			  mode="aspectFill"
			  lazy-load
			/>
		</view>
		<view class="goods-card__body">
			<view class="goods-price">
				<price
					wx:if="{{ goods.price }}"
					wr-class="spec-for-price"
					symbol-class="spec-for-symbol"
					symbol="{{currency}}"
					price="{{goods.price}}"
				/>
				<price
					wx:if="{{ goods.originPrice && isValidityLinePrice }}"
					wr-class="goods-card__origin-price"
					symbol-class="spec-for-symbol"
					symbol="{{currency}}"
					price="{{goods.originPrice}}"
					type="delthrough"
				/>
			</view>

			<view wx:if="{{ goods.title }}" class="goods-dot">
				Â· 
			</view>
			
			<view wx:if="{{ goods.title }}" class="goods-card__title">
				{{ goods.title }}
			</view>

			<view >
				<t-icon
					class="goods-card__like"
					prefix="wr"
					name="star"
					id="{{independentID}}-like"
					data-id="{{independentID}}"
					catchtap="addLikeHandle"
					size="42rpx"
					color="#333"
				/>
			</view>
		</view>
	</view>
</view>

