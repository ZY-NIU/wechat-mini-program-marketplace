<view wx:if="{{myGood}}" class="footer-cont">
  <view class="flex-row">
    <view bindtap="tapOne">
      <t-icon name="edit" size="56rpx" />
    </view>
    <view class="flex-row-padding" bindtap="tapTwo">
      <t-icon prefix="wr" name="share" size="56rpx" />
    </view>
  </view>

  <view class="flex-row" bindtap="tapThree">
    <t-icon name="check-circle" size="56rpx" />
  </view>
</view>
<view wx:else class="footer-cont">
  <view class="flex-row">
    <view bindtap="tapOne">
      <t-icon name="chat" size="56rpx" />
    </view>
    <view class="flex-row-padding" bindtap="tapTwo">
      <t-icon prefix="wr" name="share" size="56rpx" />
    </view>
  </view>

  <view wx:if="{{ hasIcon }}" class="flex-row" bindtap="tapThree">
    <t-icon wx:if="{{ saved }}" prefix="wr" name="star_filled" color="#FFD700" size="56rpx" />
    <t-icon wx:else prefix="wr" name="star" size="56rpx" />
  </view>
</view>
